<script is:inline>
  function configureDarkMode () {
    const darkMode = (() => {
      if (typeof localStorage !== 'undefined' && localStorage.getItem('darkMode')) {
        return JSON.parse(localStorage.getItem('darkMode'));
      }
      if (window.matchMedia("(prefer-color-scheme: dark)").matches) {
        return true;
      }
      return false;
    })();
    if (darkMode) {
      document.documentElement.classList.add('dark');
      document.getElementById('darkModeToggleLight').classList.add('hidden');
      document.getElementById('darkModeToggleDark').classList.remove('hidden');
    } else {
      document.documentElement.classList.remove('dark');
      document.getElementById('darkModeToggleLight').classList.remove('hidden');
      document.getElementById('darkModeToggleDark').classList.add('hidden');
    }
    window.localStorage.setItem('darkMode', darkMode);
  }
  document.addEventListener('DOMContentLoaded', () => configureDarkMode());
  document.getElementById('darkModeToggle').addEventListener('click', (evt) => {
    const darkMode = JSON.parse(localStorage.getItem('darkMode'));
    localStorage.setItem('darkMode', !darkMode);
    configureDarkMode();
  })
</script>
